<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@drawable/all_radius_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/your_emotions_txt"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="5"
        android:ellipsize="end"
        android:gravity="center"
        android:text="너의 명언은..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/your_name_txt"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="갓승현"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/your_emotions_txt"
        app:layout_constraintEnd_toEndOf="@+id/your_emotions_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>